---
import "@styles/reset.scss"
import "@styles/global.scss"
import "@styles/variables.scss"

import Header from "@components/Header.astro"
import Footer from "@components/Footer.astro"
import SkipLink from "@utils/SkipLink.astro"
import BackToTop from "@utils/BackToTop.astro"

const metaData = {
  keywords: "html, css, javascript, astro, static site generator",
  description: "Miguel Pimentel's personal website and blog.",
  imageType: "image/png",
  imageWidth: "1600",
  imageHeight: "882",
  type: "website",
  siteName: "MiguelPimentel.do",
  twitterCard: "summary_large_image",
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site)
// const socialImageURL = new URL("/seo.png", Astro.url)
const {title} = Astro.props
// const {frontmatter} = Astro.props
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content={metaData.keywords} />
    <meta name="description" content={metaData.description} />
    <link rel="icon" type="image/svg+xml" href="/avatar.png" />
    <link rel="canonical" href={canonicalURL} />
    <title>MiguelPimentel.do</title>
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content={metaData.type} />
    <meta property="og:site_name" content={metaData.siteName} />
    <meta property="og:description" content={metaData.description} />
    <meta property="og:title" content={title} />
    <!-- <meta property="og:image" content={socialImageURL} /> -->
    <meta property="og:image:type" content={metaData.imageType} />
    <meta property="og:image:alt" content={title} />
    <meta property="og:image:width" content={metaData.imageWidth} />
    <meta property="og:image:height" content={metaData.imageHeight} />
    <meta name="twitter:card" content={metaData.twitterCard} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={metaData.description} />
    <!-- <meta name="twitter:image" content={socialImageURL} /> -->
    <meta name="twitter:image:alt" content={title} />
  </head>
  <body>
    <div class="sr-only" id="start"></div>
    <div class="layout">
      <Header />
      <main class="content-wrapper">
        <SkipLink />
        <slot />
      </main>
      <section aria-label="Utilities">
        <BackToTop />
      </section>
      <Footer />
    </div>
  </body>
</html>
