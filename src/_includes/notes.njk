{% set noteslist = collections.notes | languageFilter %}
<div reversed class="notelist" style="counter-reset: start-from {{ noteslist.length + 1 }}">
  {% for note in noteslist %}
    <div class="notelist-item note__preview {% if note.url === url %}  notelist-item-active{% endif %}">
      <a class="notelist-link" href="{{ note.url }}">
        {% if note.data.title %}
          {{ note.data.title }}
        {% else %}
          <code>{{ note.url }}</code>
        {% endif %}
      </a>
      {% if note.data.description %}
        <p>{{ note.data.description |  safe }}</p>
      {% else %}
        <p>No description.</p>
      {% endif %}
    </div>
  {% endfor %}
</div>